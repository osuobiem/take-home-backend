// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Role Model
model Role {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  roles       String[]
  users       User[]
}

// User Model
model User {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  role    Role     @relation(fields: [roleId], references: [id])
  roleId  Int
  company Company?
}

// Company Model
model Company {
  id               Int    @id @default(autoincrement())
  name             String
  numberOfUsers    Int
  numberOfProducts Int
  percentage       Float
  logo             String
  user             User   @relation(fields: [userId], references: [id])
  userId           Int    @unique
}
